@*@using DrinkAndGo.ViewModels
@model DrinksListViewModel*@

<div>
<h2>
    All Drinks are shown here...
</h2>
</div>

<h2>@ViewBag.Name</h2>
<h2>@Model.CurrentCategory</h2>

@{
    foreach (var drink in Model.Drinks)
    {
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="img-thumbnail">
            <img src="@drink.ImageThumbnailUrl" alt="" width="325"/>
            <div class="caption">
                <h3 class="text-right text-decoration-none">@drink.Price.ToString("c")</h3>
                <h3>
                    <a>@drink.Name</a>
                </h3>
                <p>@drink.ShortDescription</p>
            </div>
        </div>
    </div>

    }
 }


